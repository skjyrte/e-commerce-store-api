{
  "compilerOptions": {
    /* Visit https://aka.ms/tsconfig to read more about this file */
    "target": "ES6",
    "module": "ESNext",
    "moduleResolution": "Node",
    "rootDirs": [
      "./src",
      "./tests" //NOTE - necessary for not showing warnings inside tests folder
    ],
    "typeRoots": [
      "./node_modules/@types",
      "./types" //NOTE - necessary for not showing warnings inside tests folder
    ],
    "resolveJsonModule": true, //NOTE - required to use jest preset with ts
    "allowJs": true, //NOTE - required to use jest preset with ts
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*", "tests/**/*"], //NOTE - required to use jest preset with ts
  "exclude": ["node_modules"],
  "ts-node": {
    //NOTE - these options are necessary for fixing the node:internal/process/esm_loader:34
    "experimentalSpecifierResolution": "node",
    "transpileOnly": true,
    "esm": true
  }
}
